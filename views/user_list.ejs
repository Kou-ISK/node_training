<!DOCTYPE html>
<html lang="ja">

    <head>
        <meta charset="utf-8" />
        <title>全ユーザー取得結果</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
            integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>

    <body>
        <%- include('./partials/head'); %>
            <div class="card m-3">
                <h1 class="card-title mt-4 ml-4">全ユーザー取得結果</h1>
                <div class="card-body">
                    <table class="table table-hover table-bordered table-responsive-lg text-lg-center">
                        <tr class="thead-dark">
                            <th>ユーザーID</th>
                            <th>ユーザー名</th>
                            <th>メールアドレス</th>
                        </tr>
                        <% if(typeof items !=='undefined' ){ %>
                            <% items.forEach(function(item){ %>
                                <tr>
                                    <td>
                                        <%= item.id %>
                                    </td>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.email %>
                                    </td>
                                </tr>
                                <% });%>
                                    <%}else{ %>
                                        <tr>
                                            <td>
                                                <%= item.id %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                        </tr>
                                        <% }%>
                    </table>
                </div>
            </div>

    </body>

</html>